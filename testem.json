{
  "launch_in_dev" : ["Mocha"],
  "launch_in_ci": ["JsCoverage","Chrome","Firefox","Safari","MochaCoverage"],
  "framework": "mocha",
  "launchers": {
    "Mocha": {
      "command": "mocha test/browserified.js -c -s 1000 -R spec -u bdd -t 3000 --inline-diffs "
    },
    "MochaCoverage" : {
      "command": "mocha --recursive --reporter html-cov > test/coverage/coverage.html"
    },
    "JsCoverage": "jscoverage content/ test/coverage/content && jscoverage app/ test/coverage/app"
  },
   "serve_files": [ "test/browserified.js" ],
  "src_files": [
    "app/**/*.js",
    "test/helpers/*.js",
    "test/unit/**/*.js"
  ],
    "before_tests": "grunt testem"
}
