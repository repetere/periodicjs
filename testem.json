{
  "launch_in_dev" : ["Mocha"],
  "launch_in_ci": ["Coverage","Chrome","Firefox","Safari","Mocha"],
  "framework": "mocha",
  "launchers": {
      "Mocha": {
            "command": "mocha --recursive -c -s 1000 -R spec -u bdd -t 3000 --inline-diffs"
          },
      "Coverage" : {
            "command": "grunt coverage"
          }
    },
  "src_files": [
      "app/**/*.js",
      "test/helpers/*.js",
      "test/unit/**/*.js"
    ]
}
