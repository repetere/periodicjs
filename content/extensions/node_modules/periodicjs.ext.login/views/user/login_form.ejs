<div class="_pea-row _pea-container-forminput">
	<small>Username / Email </small>
	<input type="text" name="username" class="_pea-col-span12" placeholder="username or email@domain.com" />
</div>
<div class="_pea-row _pea-container-forminput" style="margin-bottom:1.0em">
	<small>Password</small>
	<input type="password" name="password" placeholder="password" class="_pea-col-span12"  />
